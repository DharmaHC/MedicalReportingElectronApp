{
  "name": "medreportandsign",
  "productName": "MedReportAndSign",
  "version": "1.0.51",
  "description": "Applicazione Electron per la refertazione medica con firma digitale",
  "author": "Dharma Healthcare <info@dharmahealthcare.net>",
  "license": "MIT",
  "private": true,
  "main": "renderer-dist/main/index.js",
  "scripts": {
    "dev": "vite",
    "start": "electron-forge start",
    "start:dev": "cross-env electron-forge start --inspect-electron -- --remote-debugging-port=9222",
    "build:main": "node -e \"require('fs').rmSync('renderer-dist/main',{recursive:true,force:true})\" && tsc --project tsconfig.main.json",
    "build:preload": "vite build --config vite.preload.config.mjs",
    "build:renderer": "vite build --config vite.renderer.config.mjs",
    "build": "npm run build:main && npm run build:renderer && npm run build:preload",
    "make": "electron-forge make",
    "dist": "cross-env TMP=D:\\temp TEMP=D:\\temp electron-builder",
    "lint": "echo \"No linting configured\"",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "net.dharmahealthcare.medreportandsign",
    "productName": "MedReportAndSign",
    "directories": {
      "output": "dist",
      "buildResources": "resources"
    },
    "asarUnpack": [
      "**/node_modules/pkcs11js/**",
      "**/node_modules/electron-log/**",
      "**/node_modules/electron-updater/**"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "DharmaHC",
        "repo": "MedicalReportingElectronApp",
        "channel": "win7"
      }
    ],
    "files": [
      "renderer-dist/**",
      "renderer-dist/main/**",
      "renderer-dist/renderer/**",
      "renderer-dist/preload/**",
      "preload/**",
      "package.json",
      "!**/*.ts",
      "!**/*.tsx",
      "!**/*.map",
      "!src/",
      "!test/"
    ],
    "extraResources": [
      {
        "from": "renderer-dist/preload",
        "to": "preload"
      },
      {
        "from": "src/renderer/assets/",
        "to": "assets"
      },
      {
        "from": "MedReportEditor.Wpf/bin/Debug/net8.0-windows/",
        "to": "wpf-editor",
        "filter": [
          "**/*",
          "!**/*.pdb",
          "!runtimes/osx/**",
          "!runtimes/win-x86/**",
          "!runtimes/win-arm64/**"
        ]
      },
      {
        "from": "whisper-bin/",
        "to": "whisper",
        "filter": [
          "**/*"
        ]
      }
    ],
    "asar": true,
    "compression": "maximum",
    "extraMetadata": {
      "main": "renderer-dist/main/index.js"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "MedReportAndSign-Setup-${version}.exe"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "MedReportAndSign",
      "include": "resources/installer.nsh"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "universal"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "universal"
          ]
        }
      ],
      "category": "public.app-category.utilities",
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "type": "distribution"
    },
    "dmg": {
      "format": "UDZO",
      "writeUpdateInfo": false
    },
    "linux": {
      "target": [
        "AppImage",
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Utility"
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.1",
    "@electron-forge/maker-deb": "^7.10.2",
    "@electron-forge/maker-rpm": "^7.10.2",
    "@electron-forge/maker-squirrel": "^7.10.2",
    "@electron-forge/maker-zip": "^7.10.2",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.1",
    "@electron-forge/plugin-fuses": "^7.8.1",
    "@electron-forge/plugin-vite": "^7.8.1",
    "@electron/fuses": "^1.8.0",
    "@types/node": "^22.15.18",
    "@types/pkijs": "^3.0.1",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/soap": "^0.21.0",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.4.1",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "electron": "^22.3.27",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "sass-embedded": "^1.83.0",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vite-plugin-static-copy": "^3.0.0"
  },
  "dependencies": {
    "@progress/kendo-react-buttons": "^9.0.0",
    "@progress/kendo-react-common": "^9.0.0",
    "@progress/kendo-react-dateinputs": "^9.0.0",
    "@progress/kendo-react-dialogs": "^9.0.0",
    "@progress/kendo-react-dropdowns": "^9.0.0",
    "@progress/kendo-react-editor": "^9.0.0",
    "@progress/kendo-react-form": "^9.0.0",
    "@progress/kendo-react-grid": "^9.0.0",
    "@progress/kendo-react-indicators": "^9.0.0",
    "@progress/kendo-react-inputs": "^9.0.0",
    "@progress/kendo-react-layout": "^9.0.0",
    "@progress/kendo-react-listview": "^9.0.0",
    "@progress/kendo-react-notification": "^9.0.0",
    "@progress/kendo-react-treeview": "^9.0.0",
    "@progress/kendo-theme-fluent": "^9.0.3",
    "@reduxjs/toolkit": "^2.10.1",
    "asn1js": "^2.1.0",
    "axios": "^1.9.0",
    "bootstrap": "^5.3.3",
    "electron-is-dev": "^2.0.0",
    "electron-log": "^5.4.0",
    "electron-updater": "^6.6.2",
    "https-proxy-agent": "^7.0.6",
    "moment": "^2.30.1",
    "pdf-lib": "^1.17.1",
    "pkcs11js": "^2.1.6",
    "pkijs": "^2.1.97",
    "prosemirror-state": "^1.4.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^9.2.0",
    "react-router-dom": "^6.28.0",
    "redux-persist": "^6.0.0",
    "soap": "^1.6.3",
    "uuid": "^11.0.3",
    "web-vitals": "^4.2.4"
  }
}
